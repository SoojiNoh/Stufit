<!--card widgets start-->
<div id="card-widgets">
  <div class="row">
    <!-- 오늘의 대외활동 -->
    <div class="col s12 m12 l4">
      <div class="blog-card">
        <div class="card">
           <div class="card-content">
            <h4 class="card-title grey-text text-darken-4 center"><a href="#" class="grey-text text-darken-4">오늘의 추천대외활동</a>
            </h4>
          </div>
          <div class="card-image waves-effect waves-block waves-light">
            <%= image_tag "#{asset_path "test_events.png"}", alt: "blog-img" %>
          </div>
        </div>
      </div>
    </div>

    <!-- 오늘의 인터뷰 -->
    <div class="col s12 m12 l4">
      <div class="blog-card">
        <div class="card">
           <div class="card-content">
            <h4 class="card-title grey-text text-darken-4 center"><a href="#" class="grey-text text-darken-4 ">오늘의 추천인터뷰</a>
            </h4>
          </div>
          <div class="card-image waves-effect waves-block waves-light">
            <%= image_tag "#{asset_path "인터뷰.JPG"}", alt: "blog-img" %>
          </div>
        </div>
      </div>
    </div>

    <!-- my Tasks -->
    <div class="col s12 m12 l4">
      <ul id="task-card" class="collection with-header">
        <li class="collection-header cyan">
        <h4 class="task-card-title"><%=@task_name%></h4>
        <p class="task-card-date"><%=@today.to_s%> </p>
        <% @task_num = 0 %>
        </li>
        <% if @tasks.present?%>
        <li class="collection-item dismissable" style="touch-action: pan-y; -webkit-user-drag: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0);">
        <input type="checkbox" id="task1">
        <label for="task1" style="text-decoration: none;"> <%=@tasks.first.title%></label> <a href="#" class="secondary-content"><span class="ultra-small"><%=@tasks.first.end_at.to_date%></span></a>
        </label>
        <span class="task-cat teal"><%=@tasks.first.event_type%></span>
        </li>
        
        <% else %>
        <li class="collection-item dismissable" style="touch-action: pan-y; -webkit-user-drag: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0);">
        <input type="checkbox" id="task2">
        <label for="task2" style="text-decoration: none;">Check the new API standerds. <a href="#" class="secondary-content"><span class="ultra-small">Monday</span></a>
        </label>
        <span class="task-cat purple">Web API</span>
        </li>
        <li class="collection-item dismissable" style="touch-action: pan-y; -webkit-user-drag: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0);">
        <input type="checkbox" id="task3" checked="checked">
        <label for="task3" style="text-decoration: line-through;">Check the new Mockup of ABC. <a href="#" class="secondary-content"><span class="ultra-small">Wednesday</span></a>
        </label>
        <span class="task-cat pink">Mockup</span>
        </li>
        <li class="collection-item dismissable" style="touch-action: pan-y; -webkit-user-drag: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0);">
        <input type="checkbox" id="task4" checked="checked" disabled="disabled">
        <label for="task4" style="text-decoration: line-through;">I did it !</label>
        <span class="task-cat cyan">Mobile App</span>
        </li>
        <% end %>
      </ul>
    </div>

  </div>
  <!--card widgets end-->

