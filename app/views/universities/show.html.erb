<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-image">
        <%= image_tag "#{@university.img}" %>
        <span class="card-title"><%= @university.name %></span>
      </div>
      <div class="card-content">
        <p><%= @university.content %></p>
      </div>
      <div class="card-action">
        <a href="#"><%= @university.link_url %></a>
      </div>
    </div>
  </div>
</div>
