<div class="row">
  <div class="col s12 m7">
        <%= image_tag "#{@university.img}" %>
        <span class="card-title"><%= @university.name %></span>
        <p><%= @university.content %></p>
        <a href="#"><%= @university.link_url %></a>
  </div>
</div>

<% @university.comments.each do |comment| %>
     <h4>
     <%= comment.user.name %>
     <%= comment.content %>
     <%= link_to "댓글삭제", comment_path(comment), method: :delete %>
     </h4>
<% end %>

<%= render partial: '/comments/new', locals: { :comment => @university.comments.new, university: @university.id, belong: "university"} %>
