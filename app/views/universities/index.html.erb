<div class="row">
<% @universities.each do |univ| %>
  <div class="col s3 m3">
    <div class="card">
      <div class="card-image">
        <% if current_user.universities.where(id: univ.id).take != nil  %>
          <%= link_to "/universities/univ_destroy/#{UnivFollow.where(user: current_user, university: univ).take.id}" do %><i class="pull_star material-icons">star</i> <% end %>
        <% else %>
          <%= link_to "/universities/univ/#{univ.id}" do %> <i class="empty_star material-icons">star</i> <% end %>
        <% end %>
      <%= link_to university_path(univ) do %>
        <%= image_tag "#{univ.img}", size: '300x300' %>
      </div>
        <div class="card-action">
          <%= link_to univ.content+" 입학처", "#{univ.link_url}" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
</div>
<%= link_to "대학등록", new_university_path,class: 'waves-effect waves-light btn' %>

<!--페이지 넘기기-->
<%= will_paginate @universities, :renderer => 'PaginationListLinkRenderer' %>
