<head>
 <style>
  img {
    max-width: 100%;
    height: auto;
    width: auto\9; /* ie8 */
}


</style>
</head>

  <div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--6-col-tablet mdl-cell--10-col-desktop mdl-cell--stretch" >
  <table class="mdl-data-table mdl-js-data-table" style="width:100%;">
    <thead>
      <tr>
        <th data-field="id" class="mdl-data-table__cell--non-numeric", style='text-align:center; vertical-align:middle'>교내/교외</th>
        <th data-field="name" class="mdl-data-table__cell--non-numeric", style='text-align:center; vertical-align:middle'>분류</th>  
        <th data-field="price" class="mdl-data-table__cell--non-numeric", style='text-align:center; vertical-align:middle'>활동명</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td style='text-align:center; vertical-align:middle' class="mdl-data-table__cell--non-numeric"><%=@activity.activity_type%></td>
        <td style='text-align:center; vertical-align:middle' class="mdl-data-table__cell--non-numeric"><%=@activity.style%></td>
        <td style='text-align:center; vertical-align:middle' class="mdl-data-table__cell--non-numeric"><%=@activity.title%></td>
      </tr>
    </tbody>

    <thead>
      <tr>
        <th data-field="price" class="mdl-data-table__cell--non-numeric", style='text-align:center; vertical-align:middle'>주관기관</th>
        <th data-field="id" class="mdl-data-table__cell--non-numeric", style='text-align:center; vertical-align:middle'>발급번호</th>
        <th data-field="name" class="mdl-data-table__cell--non-numeric", style='text-align:center; vertical-align:middle'>급수(점수)</th>

      </tr>
    </thead>
    <tbody>
      <tr>
        <td style='text-align:center; vertical-align:middle' class="mdl-data-table__cell--non-numeric"><%=@activity.host_name%></td>    
        <td style='text-align:center; vertical-align:middle' class="mdl-data-table__cell--non-numeric"><%=@activity.issuednumber%></td>
        <td style='text-align:center; vertical-align:middle' class="mdl-data-table__cell--non-numeric"><%=@activity.grade%></td>    
      </tr>
    </tbody>
    <thead>
      <tr>
        <th data-field="price" class="mdl-data-table__cell--non-numeric", style='text-align:center; vertical-align:middle'>시작일</th>
        <th data-field="price" class="mdl-data-table__cell--non-numeric", style='text-align:center; vertical-align:middle'>종료일</th>
      </tr>
    </thead>
    <tbody>
      <tr>  
        <td style='text-align:center; vertical-align:middle' class="mdl-data-table__cell--non-numeric"><%=@activity.start_at%></td>
        <td style='text-align:center; vertical-align:middle' class="mdl-data-table__cell--non-numeric"><%=@activity.end_at%></td>
      </tr> 
    </tbody>

  </table>
</div>

  <div class="mdl-cell mdl-cell--12-col-tablet mdl-cell--10-col-desktop mdl-cell--stretchmdl-textfield mdl-js-textfield">
<table class="mdl-data-table mdl-js-data-table">
  <thead>
    <tr>
      <th data-field="id" class="mdl-data-table__cell--non-numeric", style='text-align:center; vertical-align:middle'>내용</th>  
    </tr>
  </thead>
  <tbody>
    <tr>
      <td style='text-align:center; vertical-align:middle' class="mdl-data-table__cell--non-numeric"><%=@activity.content%></td>
    </tr>
  </tbody>
</table>
</div>


  <div class="mdl-cell mdl-cell--6-col-tablet mdl-cell--10-col-desktop mdl-cell--stretch">
  <table class="mdl-data-table mdl-js-data-table">
    <thead>
      <tr>
        <th class="mdl-data-table__cell--non-numeric">이미지</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td style='text-align:center; vertical-align:middle' class="mdl-data-table__cell--non-numeric"><%= image_tag "#{@activity.image}" %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="mdl-cell mdl-cell--6-col-tablet mdl-cell--10-col-desktop mdl-cell--stretch">
<h5>관련 태그</h5>
<p>
<% @activity.hash_tags.each do |hash| %>
<span class="mdl-chip">
    <span class="mdl-chip__text"><%= link_to "#{hash.name}", hash_tag_path(hash) %></span>
</span>
<% end %>
</p>
</div>

<div class="mdl-cell mdl-cell--6-col-tablet mdl-cell--10-col-desktop mdl-cell--stretch">
<%= link_to "삭제", activity_path(@activity), method: "delete", :class=>"mdl-button mdl-js-button mdl-button--raised mdl-button--colored", :style=>"float: right;" %>
<%= link_to "수정", edit_activity_path(@activity), :class=>"mdl-button mdl-js-button mdl-button--raised mdl-button--colored", :style=>"float: right;"%>
<%= link_to "목록", activities_path, :class=>"mdl-button mdl-js-button mdl-button--raised mdl-button--colored", :style=>"float: right;"%>
</div>


