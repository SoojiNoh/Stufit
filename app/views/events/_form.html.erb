<div class="field">
    <%= f.label :title, '제목' %>
    <%= f.text_area :title %>
</div>
<div class="field">
    <%= f.label :content, '내용' %>
    <%= f.text_area :content, :size => "50x10" %>
</div>
<div>
    <%= f.label :place, '장소' %>
    <%= f.text_field :place %>
</div>
<div>
    <%= f.label :event_type, '분류' %>
    <%= f.text_field :event_type %>
</div>
<div class="field">
    <%= f.label :start_at, '시작일' %>
    <%= f.date_field :start_at %>
</div>
<div class="field">
    <%= f.label :end_at, '종료일' %>
    <%= f.date_field :end_at %>
</div>
<div>
   <%= f.label :image, '파일첨부' %> 
   <%= f.text_field :file %>
   <%= f.file_field :image %>
</div>
</br>
<div>
  <%= f.label :hash_events, '해쉬태그' %>
  <%= f.select :hash_events, options_for_select(HashTag.all.collect{ |u| [u.name,u.id] }),{},{ :multiple => true} %>
</div>
</br>
<div>
    <%= f.submit "올리기", class: 'waves-effect waves-light btn' %>
</div>
