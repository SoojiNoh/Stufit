<h5 class="center">정보게시판 목록</h5>


<!--게시판 리스트-->
<div class="row ">
<div class="col s12">
<table class="col s12 bordered centered" style="width: 100%;">
<thead>
  <tr>
    <th><%= sortable "title", "제목"%></th>
    <th><%= sortable "content", "내용"%></th>
    <th><%= sortable "created_at", "작성일"%></th>
    <th>조회수</th>
    <th>즐겨찾기</th>
  </tr>
</thead>

<tbody>
  <% @events.each do |event| %>

      <tr>
      <td><%= link_to event.title, event_path(event) %></td>
      <td><%= link_to "#{truncate(event.content, :length => 16, :separator=>' ')}", event_path(event) %></td>
      <td><%= truncate(event.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일"), :length => 14, :separator=>' ')%></td>
      <td><%= event.impressions.count %> </td> <!--조회수 event.impressionist -->
      
      <td>
       <% if current_user.events.where(id: event.id).take != nil  %>
         <%= link_to "/events/eventfollow_destroy/#{UserEvent.where(user: current_user, event: event).take.id}" do %><i class="pull_star material-icons">star</i> <% end %>
       <% else %>
         <%= link_to "/events/eventfollow/#{event.id}" do %> <i class="empty_star material-icons">star</i> <% end %>
       <% end %></td>
      </tr>
  <% end %>
</tbody>
</table>
<br><br>
<!--페이지 넘기기-->
<ul class="pagination">
<%= will_paginate @events, class:"waves-effect " %>


 <!--버튼-->
<%= link_to "새글 쓰기", new_event_path ,class: 'waves-effect waves-light btn right'%><br><br><br>
</div>
</div>