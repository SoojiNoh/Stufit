<div class="row">
  
   <div class="col s3">
        <!--왼쪽 메뉴바 -->
   </div>
   
   <div class="col s9">
<h5>정보게시판 목록</h5>
</br>
<table>
 <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <th>등록일</th>
      <th>기능</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= truncate(event.content, :length => 30, :separator=>' ')do link_to "더보기", event_path(event) end%></td>
        <td><%= truncate(event.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일 %H시%M분%S초"), :length => 16, :separator=>' ')do link_to "자세히", event_path(event) end%></td>
        <td><%= link_to "자세히", event_path(event) %></td>
      </tr>    
    <% end %>
  </tbody>
</table>

<%= link_to "새 글쓰기", new_event_path %>
  </div>
</div>
    