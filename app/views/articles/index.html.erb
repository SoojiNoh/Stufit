<table>
  <thead>
    <tr>
      <th>제목</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>


  <% if @articles.present? %>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          
          <td><%= link_to '자세히', article %></td>
          <td><%= link_to '수정', edit_article_path(article) %></td>
          <td><%= link_to '삭제', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    <% else %>
      <p>There are no articles containing the term(s) <%= params[:search] %>.</p>
    <% end %>
</table>

<br>

<%= link_to '전공글추가', new_article_path %>