<!DOCTYPE html>
<html>
  <head>
    <title>Stufit</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  
  </head>

  <body>

    <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Logo</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>

      <% if user_signed_in? %>
          <ul class="right hide-on-med-and-down">
            <li><%= link_to '행사', events_path , method: 'get' %></li>
            <li><%= link_to '활동내역', activities_path , method: 'get' %></li>
            <li><%= link_to current_user.name, my_page_index_path , method: 'get' %></li>
            <li><%= link_to '로그아웃', destroy_user_session_path, method: 'delete' %></li>
          </ul>
          <ul class="side-nav" id="mobile-demo">
            <li><%= link_to '행사', events_path , method: 'get' %></li>
            <li><%= link_to current_user.name, my_page_index_path , method: 'get' %></li>
            <li><%= link_to '로그아웃', destroy_user_session_path, method: 'delete' %></li>
          </ul>
      <% else %>
        <ul class="right hide-on-med-and-down">
          <li><%= link_to '행사', events_path , method: 'get' %></li>
          <li><%= link_to '활동내역', activities_path , method: 'get' %></li>
          <li><%= link_to '회원가입', new_user_registration_path , method: 'get' %></li>
          <li><%= link_to '로그인', new_user_session_path, method: 'get' %></li>
        </ul>
        <ul class="side-nav" id="mobile-demo">
          <li><%= link_to '행사', events_path , method: 'get' %></li>
          <li><%#= link_to '회원가입', new_user_registration_path , method: 'get' %></li>
          <li><%= link_to '로그인', new_user_session_path, method: 'get' %></li>
        </ul>
      <% end %>
    </div>
    </nav>

    <main>
    <div class="container">
      <%= yield %>
    </div>
    </main>

    <footer class="page-footer">
    <div class="container">
      <div class="row">
      </div>
    </div>
    <div class="footer-copyright">
      <div class="container">
        Copyright © 2016. Stu-Fit. All rights reserved.
        <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
      </div>
    </div>
    </footer>

  </body>
</html>
